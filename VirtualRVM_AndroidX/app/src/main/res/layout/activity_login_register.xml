<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
	android:gravity="center"
	android:background="@color/colorPrimaryDark">

	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:layout_marginTop="20dp"
		android:layout_marginBottom="20dp"
		app:cardCornerRadius="4dp"
		app:cardBackgroundColor="@color/colorPrimary">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:padding="10dp">

			<LinearLayout
				android:id="@+id/logreg_signin"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:visibility="visible">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:layout_marginBottom="5dp"
					android:orientation="vertical">

					<TextView
						android:id="@+id/logreg_signin_header"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:textColor="@color/lightGrey"
						android:textAllCaps="true"
						android:text="@string/header_signin"
						android:gravity="center"
						android:padding="8dp"
						style="@style/Base.TextAppearance.AppCompat.Medium"/>

				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:orientation="vertical">

					<EditText
						android:id="@+id/logreg_signin_username"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="20dp"
						android:padding="8dp"
						android:background="@drawable/textinput_selector"
						android:hint="@string/hint_username"
						android:inputType="text"
						android:imeOptions="actionNext"
						android:singleLine="true"/>

					<EditText
						android:id="@+id/logreg_signin_password"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="20dp"
						android:padding="8dp"
						android:background="@drawable/textinput_selector"
						android:hint="@string/hint_password"
						android:inputType="textPassword"
						android:imeOptions="actionDone"
						android:singleLine="true"/>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">

						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:layout_weight="1"
							android:orientation="vertical">

							<CheckBox
								android:id="@+id/logreg_signin_remember"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:padding="8dp"
								android:gravity="center_vertical|left"
								android:theme="@style/RVMCheckBoxTheme"
								android:text="@string/box_remember"
								android:textColor="@color/lightGrey"/>

						</LinearLayout>

						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:layout_weight="1"
							android:orientation="vertical">

							<Button
								android:id="@+id/logreg_signin_btn"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:paddingTop="-16dp"
								android:paddingBottom="-16dp"
								android:text="@string/tab_signin"
								android:textColor="@color/spruce"
								android:background="@drawable/button_selector"/>

						</LinearLayout>

					</LinearLayout>

				</LinearLayout>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/logreg_signup"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:visibility="gone">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:layout_marginBottom="5dp"
					android:orientation="vertical">

					<TextView
						android:id="@+id/logreg_signup_header"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:textColor="@color/lightGrey"
						android:textAllCaps="true"
						android:text="@string/header_signup"
						android:gravity="center"
						android:padding="8dp"
						style="@style/Base.TextAppearance.AppCompat.Medium"/>

				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:orientation="vertical">

					<EditText
						android:id="@+id/logreg_signup_username"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="20dp"
						android:padding="8dp"
						android:background="@drawable/textinput_selector"
						android:hint="@string/hint_username"
						android:inputType="text"
						android:imeOptions="actionNext"
						android:singleLine="true"/>

					<EditText
						android:id="@+id/logreg_signup_password"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="20dp"
						android:padding="8dp"
						android:background="@drawable/textinput_selector"
						android:hint="@string/hint_password"
						android:inputType="textPassword"
						android:imeOptions="actionDone"
						android:singleLine="true"/>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">

						<Button
							android:id="@+id/logreg_signup_btn"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:paddingTop="-16dp"
							android:paddingBottom="-16dp"
							android:text="@string/tab_signup"
							android:textColor="@color/spruce"
							android:background="@drawable/button_selector"/>

					</LinearLayout>

				</LinearLayout>

			</LinearLayout>

		</LinearLayout>

	</androidx.cardview.widget.CardView>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="20dp"
		android:orientation="horizontal"
		android:padding="5dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:orientation="vertical">

			<TextView
				android:id="@+id/logreg_bottom_info"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center|left"
				android:textColor="@color/colorPrimary"
				android:text="@string/nav_dont_have_account"
				style="@style/Base.TextAppearance.AppCompat.Small"/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:orientation="vertical">

			<TextView
				android:id="@+id/logreg_bottom_nav"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center|right"
				android:textColor="@color/tealishGreen"
				android:textStyle="bold"
				android:text="@string/nav_signup"
				style="@style/Base.TextAppearance.AppCompat.Small"/>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>
